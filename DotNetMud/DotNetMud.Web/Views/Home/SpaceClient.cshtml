
@{
    ViewBag.Title = "Client";
}

@section scripts {

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/App/Main.js"></script>
    <!--Add script to update the page and send messages.-->
}

<h2>Client</h2>

<div class="container">
    <div class="row">
        <canvas id="canvas"></canvas>
    </div>
    <table>
        <tr>
            <td>server update ms:</td>
            <td><span id="msBetweenServerUpdates"></span></td>
            <td>X:</td>
            <td><span id="locationX"></span></td>
        </tr>
        <tr>
            <td>animate every ms:</td>
            <td><span id="msBetweenAnimates"></span></td>
            <td>Y:</td>
            <td><span id="locationY"></span></td>
        </tr>
        <tr>
            <td>animate takes ms:</td>
            <td><span id="msToAnimate"></span></td>
            <td>V:</td>
            <td><span id="speed"></span></td>
        </tr>
    </table>
</div>
